# Database Configuration (Required)
# Use a PostgreSQL database URL - we recommend using Vercel Postgres, Supabase, or Azure PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public&sslmode=require"

# Redis Configuration (Optional - caching disabled if not set)
# Use Upstash Redis or similar serverless Redis
REDIS_URL="redis://localhost:6379"

# RabbitMQ Configuration (Optional - queue disabled if not set)
# Use CloudAMQP or similar message queue service
RABBITMQ_URL="amqp://guest:guest@localhost:5672"

# Azure OpenAI Configuration (Required for AI features)
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_VERSION="2024-12-01-preview"
AZURE_OPENAI_DEPLOYMENT="gpt-4"

# Claude AI Configuration (Optional fallback)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# JWT Configuration (Required)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# File Storage Configuration
# For Vercel deployment, use Vercel Blob or similar cloud storage
# BLOB_READ_WRITE_TOKEN is used by @vercel/blob
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"

# OCR Configuration
OCR_LANGUAGES="eng"

# Application Settings
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
